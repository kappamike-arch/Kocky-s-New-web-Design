# Production Environment Variables Template
NODE_ENV=production

# Database
DATABASE_URL=file:./prod.db

# Authentication
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-password
SMTP_FROM=noreply@domain.com
ADMIN_EMAIL=admin@domain.com

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com

# Logging
LOG_LEVEL=info

# Email CC Routing by Inquiry Type
EMAIL_CC_RESERVATION=info@kockys.com
EMAIL_CC_CATERING=info@kockys.com,mgibson@kockys.com
EMAIL_CC_FOODTRUCK=info@kockys.com,mgibson@kockys.com
EMAIL_CC_MOBILEBAR=info@kockys.com,mgibson@kockys.com
EMAIL_CC_CONTACT=info@kockys.com
