# ===================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===================================

# Server Configuration
NODE_ENV=production
PORT=5001

# Database Configuration
DATABASE_URL="file:../backend/prisma/kockys.db"

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING

# Application URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com
ADMIN_URL=https://yourdomain.com/admin
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_ADMIN_URL=https://yourdomain.com/admin

# Email Configuration (Office 365)
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASS=your-password
EMAIL_FROM=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Microsoft Graph API (Optional for calendar integration)
MSAL_CLIENT_ID=
MSAL_CLIENT_SECRET=
MSAL_TENANT_ID=

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_live_your-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# Upload Configuration
UPLOAD_PATH=/var/www/uploads
MAX_UPLOAD_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
