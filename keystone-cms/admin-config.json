  "dashboard": {
    "widgets": [
      {
        "type": "stats",
        "title": "Today's Overview",
        "stats": [
          { "label": "Total Inquiries", "value": "inquiries.new", "color": "blue" },
          { "label": "Active Menu Items", "value": "menuItems.available", "color": "green" },
          { "label": "Email Subscribers", "value": "emailList.active", "color": "purple" },
          { "label": "Page Views", "value": "analytics.pageViews", "color": "orange" }
        ]
      },
      {
        "type": "recent",
        "title": "Recent Inquiries",
        "list": "Inquiry",
        "limit": 5
      },
      {
        "type": "chart",
        "title": "Weekly Traffic",
        "data": "analytics.weekly"
      }
    ]
  },
  "features": {
    "csvImport": {
      "enabled": true,
      "lists": ["EmailSubscriber", "Customer"]
    },
    "bulkActions": {
      "enabled": true,
      "actions": [
        "delete",
        "updateStatus",
        "addTags"
      ]
    },
    "search": {
      "enabled": true,
      "placeholder": "Search everything..."
    },
    "darkMode": {
      "enabled": true,
      "default": false
    }
  },
  "permissions": {
    "roles": {
      "ADMIN": {
        "description": "Full access to all features",
        "permissions": ["*"]
      },
      "STAFF": {
        "description": "Can manage content and customers",
        "permissions": [
          "MenuItem:*",
          "Page:*",
          "Customer:read",
          "Customer:update",
          "Inquiry:*",
          "EmailSubscriber:read"
        ]
      },
      "VIEWER": {
        "description": "Read-only access",
        "permissions": [
          "*:read"
        ]
      }
    }
  }
}
